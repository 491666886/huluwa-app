
.head{
  height: 260rpx;
  background-image: linear-gradient(#e66465, #9198e5);
  padding: 60rpx;
}
.hd_user{
  display: flex;
}
.user_img{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-right: 32rpx;
}
.uesr_money image{
  width: 20rpx;
  height: 20rpx;
}
.hd_user_info{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.hd_user_name{
  font-size: 40rpx;
  color: #fff;
}
.uesr_money{
  padding: 0 20rpx;
  background-color: #fff;
  opacity: .5;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.uesr_money_num{
  padding: 0 12rpx;
}

.classify{
  padding: 0 30rpx;
}
.classify_cot{
  background-color: royalblue;
  border-radius: 20rpx;
  box-shadow:0px 0px 5px black;
  display: flex;
  padding: 40rpx 0; 
  margin-top: -90rpx;
}
.classify_cot_item{
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  position: relative;
}
.classify_cot_item:after {
  content: '';
  margin: 0 auto;
  position: absolute;
  top: 14rpx;
  right: 0;
  height: 40px;
  width: 2px;
  background-color: red;
}
.classify_cot_item:nth-child(3):after{
  display: none;
}
.classify_cot_item image{
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
}
.list{
  padding: 0 60rpx;
}
.item{
  display: flex;
  justify-content: space-between;
  height: 100rpx;
  align-items: center;
}
.item image{
  width: 20rpx;
  height: 40rpx;
}
.item_lt{
  position: relative;
}
.item_lt text:nth-child(2){
  position: absolute;
  right: -12rpx;
  top: 0;
  width: 12rpx;
  height: 12rpx;
  background-color: red;
  border-radius: 50%;
}